<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!-- 要调用的工作类 -->
    <bean id="autoConfigure" class="com.qt.quartz.controller.QuartzController" >
        <property name="schedulerFactory" ref="startQuertz"/>
    </bean>
	<bean id="testJob" class="com.qt.quartz.controller.QuartzController" >
	</bean>

	<!-- 定义调用对象和调用对象的方法 -->
	<!-- 动态定义时间方法 -->
    <bean id="autoConfigureTask"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 调用的类 -->
        <property name="targetObject">
            <ref bean="autoConfigure" />
        </property>
        <!-- 调用类中的方法 -->
        <property name="targetMethod">
            <value>reScheduleJob</value>
        </property>
        <property name="concurrent" value="false"/>
    </bean>

	<!-- 定时任务 -->
	<bean id="jobtask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="testJob" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>taskJobLog</value>
		</property>
		<property name="concurrent" value="false"/>
	</bean>

	
	<!-- 定义触发时间 -->
	<!-- 动态定义时间方法 -->
    <bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="autoConfigureTask" />
        </property>
        <!-- cron表达式 每天X点执行一次任务-->
        <property name="cronExpression">
            <value>0/10 * * * * ? *</value>
        </property>
    </bean>

	<!-- 定时任务 -->
	<bean id="doTime" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="jobtask" />
		</property>
		<!-- cron表达式 每天X点执行一次任务-->
		<property name="cronExpression">
			<value>0 0 1 * * ? *</value>
		</property>
	</bean>

	<!-- 总管理类 如果将lazy-init='false'那么容器启动就会执行调度程序 -->
	<bean id="startQuertz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- 动态定义时间方法 -->
				<ref bean="cronTrigger" />
				<!-- 定时任务 -->
                <ref bean="doTime" />
			</list>
		</property>
	</bean>

</beans>